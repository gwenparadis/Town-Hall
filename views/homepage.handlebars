<div class="hero min-h-screen" style="background-image: url(https://placeimg.com/1000/800/arch);">
  <div class="hero-overlay bg-opacity-60"></div>
  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-md">
      <h1 class="mb-5 text-5xl font-bold">Welcome to Town Hall!</h1>
      <p class="mb-5">A public forum for the people, by the people!</p>
      <button class="btn btn-primary">
        <a href="/posts">Explore Town Hall Posts</a>
      </button>
      <button class="btn btn-primary">
        {{#if logged_in}}
        <a href="/profile">My Profile</a> |
        <button class="no-button" id="logout"><a href="/logout">Log Out</a></button>
        {{else}}
        <a href="/login">Log In To contribute</a>
        {{/if}}
      </button>
    </div>
  </div>
</div>