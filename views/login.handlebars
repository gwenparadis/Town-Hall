<div class="hero w-screen" style="background-image: url(https://placeimg.com/1000/800/arch);">
    <div class="hero-overlay bg-opacity-60"></div>
    <div class="hero-content text-center text-neutral-content">
      <div class="max-w-md">
        <p class="mb-5">We want to hear from you! <br> Login or Sign up to create posts in the Newsfeed.</p>
      </div>
    </div>
  </div>

<div class="flex items-center justify-center">
  <form class="form login-form w-1/3 p-20">
    <div class="card flex-shrink-0 w-full max-w-lg shadow-2xl bg-warning">
      <div class="card-body">
        <div class="form-control">
          <h2>Already a User? Login!</h2>
          <label for="email-login" class="label">
            <span class="label-text">email:</span>
          </label>
          <input class="form-input rounded-md border-2" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login" class="label">
            <span class="label-text">password:</span>
          </label>
          <input class="form-input rounded-md border-2" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-base-300" type="submit">login</button>
        </div>
      </div>
    </div>
  </form>

  <form class="form signup-form w-1/3 p-20">
    <div class="card flex-shrink-0 w-full max-w-lg shadow-2xl bg-warning">
      <div class="card-body">
        <div class="form-control">
          <h2>Need to Create an Account? Signup!</h2>
          <label for="name-signup" class="label">
            <span class="label-text">First Name:</span>
          </label>
          <input class="form-input rounded-md border-2" type="text" id="fname-signup" />
        </div>
        <div class="form-group">
          <label for="name-signup" class="label">
            <span class="label-text">Last Name:</span>
          </label>
          <input class="form-input rounded-md border-2" type="text" id="lname-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup" class="label">
            <span class="label-text">email:</span>
          </label>
          <input class="form-input rounded-md border-2" type="text" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup" class="label">
            <span class="label-text">password:</span>
          </label>
          <input class="form-input rounded-md border-2" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="btn btn-base-300" type="submit">signup</button>
        </div>
      </div>
    </div>
  </form>
</div>

<script src="./js/login.js"></script>