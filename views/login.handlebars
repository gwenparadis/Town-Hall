<div class="flex items-center justify-center">

  <form class="form login-form p-20">
    <div class="card flex-shrink-0 w-full max-w-lg shadow-2xl bg-base-100">
      <div class="card-body">
        <div class="form-control">
          <h2>Login</h2>
          <label for="email-login">email:</label>
          <input class="form-input rounded-md border-2" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">password:</label>
          <input class="form-input rounded-md border-2" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">login</button>
        </div>
      </div>
    </div>
  </form>

  <form class="form signup-form p-20">
    <div class="card flex-shrink-0 w-full max-w-lg shadow-2xl bg-base-100">
      <div class="card-body">
        <div class="form-control">
          <h2>Signup</h2>
          <label for="name-signup">First Name:</label>
          <input class="form-input rounded-md border-2" type="text" id="fname-signup" />
        </div>
        <div class="form-group">
          <label for="name-signup">Last Name:</label>
          <input class="form-input rounded-md border-2" type="text" id="lname-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup">email:</label>
          <input class="form-input rounded-md border-2" type="text" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">password:</label>
          <input class="form-input rounded-md border-2" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">signup</button>
        </div>
      </div>
    </div>
  </form>
</div>

<script src="./js/login.js"></script>