<container class="grid grid-cols-1 gap-4 w-screen h-screen">
  <button class="btn btn-primary">
    {{#if logged_in}}
    <a href="/createPosts">Create New Post</a>
    {{else}}
    <a href="/login">Log In to Create your own post</a>
    {{/if}}
  </button>

  <div class="card w-96 bg-base-100 shadow-xl w-4/5">
    <div class="card-body">
      <h2 class="card-title">
        <div class="avatar">
          <div class="w-24 rounded">
            <img src="https://placeimg.com/192/192/people" />
          </div>
        </div>
        {{firstName}}
        <div class="badge badge-secondary">New</div>
      </h2>

      <form class="form new-post-form">
        <div class="form-group">
          <label for="project-name"></label>
          <input class="form-input rounded-md border-2 w-full mb-5" type="text" id="content" name="content"
            placeholder="What's on your mind, {{firstName}}?" />
        </div>
        <div class="form-group">
          <input class="form-input rounded-md border-2 w-30 mb-5" type="text" id="topic" name="topic"
            placeholder="topic" />
        </div>

        <div class="form-group ">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>

  {{#each posts}}
  <div class="card w-96 bg-base-100 shadow-xl w-4/5">
    <div class="card-body">
      <h2 class="card-title">
        <div class="avatar">
          <div class="w-24 rounded">
            <img src="https://placeimg.com/192/192/people" />
          </div>
        </div>
        {{firstName}}
        <div class="badge badge-secondary">{{topic}}</div>
      </h2>

      <p class="w-full mb-5">{{content}}</p>
      <div class="card-actions justify-end">
        <div class="badge badge-outline">{{id}}</div>
      </div>
    </div>
  </div>
  {{/each}}
</container>

<script src="/js/posts.js"></script>